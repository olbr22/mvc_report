{% block body %}
    <div class="container my-5">
            <div>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('sustainability') }}">Om projektet</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('food') }}">Matavfall och matsvin</a>
                    </li>
