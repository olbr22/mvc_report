{% extends 'base.html.twig' %}

{% block title %}Edit{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Edit " {{ book.title}} "</h1>
    <a href="{{ path('book_show_all') }}">Show all the books</a>
    <form action="{{ path('book_update_post', {'id': book.id}) }}" method="post">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" value = {{ book.title}}><br>
        <label for="author">Author:</label>
        <input type="text" id="author" name="author" value = {{ book.author}}><br>
        <label for="isbn">ISBN:</label>
        <input type="text" id="isbn" name="isbn" value = {{ book.isbn}} maxlength="13"><br>
        <label for="image">Image:</label>
        <input type="text" id="image" name="image" value = {{ book.image}}><br>
        <input type="submit" value="Submit">
    </form>
</div>
{% endblock %}
